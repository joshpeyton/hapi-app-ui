{
  "name": "hapi-app-ui",
  "version": "2.0.0",
  "main": "server.js",
  "author": "Josh Peyton",
  "scripts": {
    "start": "node index.js",
    "startwatch": "nodemon index.js",
    "gulp": "gulp",
    "gulpwatch": "gulp local",
    "dev": "concurrently --kill-others-on-fail \"npm run startwatch\" \"npm run gulpwatch\"",
    "test": "lab",
    "lint": "lab -dL",
    "coverage": "npm test && open coverage.html"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshpeyton/hapi-app-ui.git"
  },
  "dependencies": {
    "@hapi/glue": "^7.0.0",
    "@hapi/hapi": "^19.1.0",
    "@hapi/inert": "^6.0.1",
    "@hapi/joi": "^17.1.0",
    "@hapi/vision": "^6.0.0",
    "@hapi/wreck": "^17.0.0",
    "async": "^3.1.1",
    "handlebars": "^4.7.3",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.1",
    "@hapi/lab": "^22.0.3",
    "babel-eslint": "^10.0.3",
    "concurrently": "^3.5.0",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-walmart": "^2.2.1",
    "eslint-plugin-filenames": "^1.3.2",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-declare": "^0.3.0",
    "gulp-gzip": "^1.4.2",
    "gulp-handlebars": "^5.0.2",
    "gulp-jshint": "^2.1.0",
    "gulp-jshint-xml-file-reporter": "^0.5.1",
    "gulp-less": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-tar": "^3.1.0",
    "gulp-uglify": "^3.0.0",
    "gulp-util": "^3.0.8",
    "gulp-wrap": "^0.15.0",
    "jshint": "^2.11.0",
    "jshint-stylish": "^2.2.1",
    "merge-stream": "^2.0.0",
    "nock": "^11.7.2",
    "nodemon": "^2.0.2"
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "client/*",
      "dist/*",
      "temp/*",
      "test/*"
    ],
    "ext": "js,json,hbs",
    "watch": "server"
  }
}
